{
  "name": "mindstorm",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace apps/web",
    "dev:backend": "npm run dev --workspace backend",
    "dev": "concurrently -k \"npm run dev:web\" \"npm run dev:backend\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
